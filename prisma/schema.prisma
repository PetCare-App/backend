// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  email    String
  password String
  fullname String
  pets     Pet[]
}

model Pet {
  id              Int               @id @default(autoincrement())
  animalType      AnimalType
  name            String
  breed           String
  gender          String
  weight          Float
  birthDate       DateTime
  userId          Int
  user            User              @relation(fields: [userId], references: [id])
  vaccines        Vaccine[]
  hygiene         Hygiene[]
  parasiteControl parasiteControl[]
}

model Vaccine {
  id    Int      @id @default(autoincrement())
  name  String
  date  DateTime
  Pet   Pet?     @relation(fields: [petId], references: [id])
  petId Int?
}

model Hygiene {
  id    Int      @id @default(autoincrement())
  name  String
  date  DateTime
  Pet   Pet?     @relation(fields: [petId], references: [id])
  petId Int?
}

model parasiteControl {
  id    Int      @id @default(autoincrement())
  name  String
  date  DateTime
  Pet   Pet?     @relation(fields: [petId], references: [id])
  petId Int?
}

enum AnimalType {
  Dog
  Cat
  Pig
  Bird
  Rat
  Hamster
  Other
}
